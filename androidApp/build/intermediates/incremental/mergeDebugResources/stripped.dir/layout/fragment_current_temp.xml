<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CurrentTempFragment">


    <ProgressBar
            android:id="@+id/pb_load"
            android:layout_width="164dp"
            android:layout_height="164dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/lightBlue"
            android:visibility="gone" />

    <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cidade"
            android:elevation="2dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/lightBlue"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="bla bla bla bla bla bla bla"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_city"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="00/00/00"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/cl_card"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_card"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_date"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/shadow_white">

        <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:layout_constraintStart_toStartOf="@id/cl_card"
                app:layout_constraintEnd_toStartOf="@id/tv_temperature"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_sun"

                />

        <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/iv_weather_icon"
                app:layout_constraintTop_toTopOf="@id/iv_weather_icon"
                app:layout_constraintEnd_toEndOf="@id/cl_card"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:text="40째C" />


        <TextView
                android:id="@+id/tv_max_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_temperature"
                app:layout_constraintTop_toBottomOf="@id/tv_temperature"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="MAX: 40째C" />

        <TextView
                android:id="@+id/tv_min_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_max_temperature"
                app:layout_constraintTop_toBottomOf="@id/tv_max_temperature"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="MIN: 40째C" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:id="@+id/tv_feels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_card"
            app:layout_constraintStart_toStartOf="@id/tv_city"
            app:layout_constraintEnd_toEndOf="@id/tv_city"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="1dp"
            android:text="Feels Like: 40째C" />

    <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_feels"
            app:layout_constraintStart_toStartOf="@id/tv_city"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/tv_city"
            android:textSize="16sp"
            android:text="Humidity: 40%" />

</androidx.constraintlayout.widget.ConstraintLayout>