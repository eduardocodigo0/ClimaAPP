<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/shadow_white">


    <TextView
            android:id="@+id/tv_prev_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/00"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_prev_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climate description"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_prev_date" />

    <ImageView
            android:id="@+id/iv_prev_weather_icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_prev_max_temperature"
            app:layout_constraintTop_toBottomOf="@id/tv_prev_description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_sun"

            />

    <TextView
            android:id="@+id/tv_prev_max_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_prev_weather_icon"
            app:layout_constraintTop_toTopOf="@id/iv_prev_weather_icon"
            android:layout_marginTop="24dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="MAX: 40°C" />

    <TextView
            android:id="@+id/tv_prev_min_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_prev_max_temperature"
            app:layout_constraintTop_toBottomOf="@id/tv_prev_max_temperature"
            android:layout_marginTop="8dp"
            android:textColor="@color/light_green"

            android:textSize="22sp"
            android:textStyle="bold"
            android:text="MIN: 40°C" />

    <TextView
            android:id="@+id/tv_prev_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/iv_prev_weather_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>